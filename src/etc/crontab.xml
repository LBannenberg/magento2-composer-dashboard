<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="corrivate_composerdashboard_warm_cache" instance="Corrivate\ComposerDashboard\Cron\WarmCache"
             method="execute">
            <schedule>* * * * *</schedule>
        </job>
        <job name="corrivate_composerdashboard_send_advisory_reminders"
             instance="Corrivate\ComposerDashboard\Cron\SendAdvisoryReminders" method="execute">
            <config_path>corrivate_composer_dashboard/security_advisories/cron_frequency</config_path>
        </job>
        <job name="corrivate_composerdashboard_send_outdated_reminders"
             instance="Corrivate\ComposerDashboard\Cron\SendOutdatedReminders" method="execute">
            <config_path>corrivate_composer_dashboard/outdated_packages/cron_frequency</config_path>
        </job>
    </group>
</config>
